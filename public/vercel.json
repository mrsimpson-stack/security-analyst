{
  "functions": {
    "api/*.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/api/generate", "destination": "/api/generate.js" },
    { "source": "/api/verify", "destination": "/api/verify.js" },
    { "source": "/api/session", "destination": "/api/session.js" },
    { "source": "/api/status", "destination": "/api/status.js" },
    { "source": "/", "destination": "/public/index.html" },
    { "source": "/dashboard", "destination": "/public/dashboard.html" },
    { "source": "/session", "destination": "/public/session.html" },
    { "source": "/(.*)", "destination": "/public/index.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ]
}